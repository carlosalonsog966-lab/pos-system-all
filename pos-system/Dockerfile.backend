FROM node:18-bullseye-slim

WORKDIR /app

# Copiar archivos de backend
COPY backend/package*.json ./
RUN npm ci --only=production || npm install --production

COPY backend .

# Construir TypeScript
RUN npm run build

# Variables de entorno por defecto (pueden ser sobreescritas en compose)
ENV PORT=3000

EXPOSE 3000

CMD ["node", "dist/server.js"]

