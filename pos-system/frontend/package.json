{
  "name": "pos-system-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "predev": "powershell -ExecutionPolicy Bypass -File ../backend/scripts/kill-web.ps1",
    "dev": "vite --port 7001 --host",
    "build": "vite build",
    "build:fast": "vite build",
    "build:offline-absoluto": "tsc && vite build --config vite.config.offline-simple.ts && npm run configurar-offline-absoluto",
    "configurar-offline-absoluto": "node -e \"const fs=require('fs');const path=require('path');const indexPath=path.join(__dirname,'dist/index.html');if(fs.existsSync(indexPath)){let html=fs.readFileSync(indexPath,'utf8');html=html.replace(/src=\\\"[^\\\"]*main[^\\\"]*\\\"/g,'src=\\\"/assets/main-offline-absoluto.js\\\"');fs.writeFileSync(indexPath,html);console.log('âœ… Index.html configurado para offline absoluto');}\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --port 7001",
    "test": "vitest --run --reporter=default",
    "test:ci": "vitest --run --reporter=verbose --pool=forks --coverage=false --bail=1",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "audit:ui": "playwright test e2e/ui-auditor.spec.ts --reporter=list",
    "audit:ui:html": "playwright test e2e/ui-auditor.spec.ts --reporter=html"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.2.0",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "axios": "^1.6.2",
    "date-fns": "^4.1.0",
    "html2canvas": "^1.4.1",
    "jsbarcode": "^3.12.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.552.0",
    "papaparse": "^5.5.3",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^3.3.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsbarcode": "^3.11.4",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^1.6.1",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0"
  }
}
